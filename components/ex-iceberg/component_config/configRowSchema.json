{
  "type": "object",
  "title": "Component configuration",
  "required": [
    "source",
    "data_selection",
    "destination",
    "debug"
  ],
  "properties": {
    "source": {
      "type": "object",
      "title": "Data source",
      "required": [
        "namespace",
        "table_name"
      ],
      "properties": {
        "namespace": {
          "enum": [],
          "type": "string",
          "title": "Namespace",
          "format": "select",
          "default": "",
          "options": {
            "async": {
              "label": "Load namespaces",
              "action": "list_namespaces"
            }
          },
          "propertyOrder": 1
        },
        "table_name": {
          "enum": [],
          "type": "string",
          "title": "Table Name",
          "format": "select",
          "default": "",
          "options": {
            "async": {
              "label": "Load tables",
              "action": "list_tables"
            }
          },
          "propertyOrder": 2
        }
      },
      "propertyOrder": 1
    },
    "data_selection": {
      "type": "object",
      "title": "Data selection",
      "required": [
        "mode"
      ],
      "properties": {
        "mode": {
          "enum": [
            "all_data",
            "selected_columns"
          ],
          "type": "string",
          "title": "Data selection mode",
          "default": "all_data",
          "options": {
            "enum_titles": [
              "All Data",
              "Selected Columns"
            ]
          },
          "propertyOrder": 31
        },
        "columns": {
          "type": "array",
          "items": {
            "enum": [],
            "type": "string"
          },
          "title": "Columns to extract",
          "format": "select",
          "options": {
            "tags": true,
            "async": {
              "label": "Re-load columns",
              "action": "list_columns"
            },
            "dependencies": {
              "mode": "select_columns"
            }
          },
          "uniqueItems": true,
          "propertyOrder": 34
        },
        "table_preview": {
          "type": "button",
          "format": "sync-action",
          "options": {
            "async": {
              "label": "Query preview",
              "action": "query_preview"
            },
            "dependencies": {
              "mode": "custom_query"
            }
          },
          "propertyOrder": 33
        }
      },
      "propertyOrder": 3
    },
    "destination": {
      "type": "object",
      "title": "Destination",
      "required": [
        "load_type"
      ],
      "properties": {
        "file_name": {
          "type": "string",
          "title": "File name",
          "default": "",
          "options": {
            "dependencies": {
              "parquet_output": true
            }
          },
          "description": "(Optional) Specify the file name (without the filetype) if you leave this field empty, the default name container_blob will be used. The resulting file will be named `<table_name>.parquet`",
          "propertyOrder": 45
        },
        "load_type": {
          "enum": [
            "incremental_load",
            "full_load"
          ],
          "type": "string",
          "title": "Load Type",
          "default": "incremental_load",
          "options": {
            "enum_titles": [
              "Incremental Load",
              "Full Load"
            ],
            "dependencies": {
              "parquet_output": false
            }
          },
          "description": "If Full load is used, the destination table will be overwritten every run. If Incremental Load is used, data will be upserted into the destination table based on the primary key. Append modes do not contain any primary keys and are not deduplicated.",
          "propertyOrder": 42
        },
        "table_name": {
          "type": "string",
          "title": "Table name",
          "default": "",
          "options": {
            "dependencies": {
              "parquet_output": false
            }
          },
          "description": "(Optional) Specify the table name (without the filetype) if you leave this field empty, the default name container_blob will be used.",
          "propertyOrder": 44
        },
        "primary_key": {
          "type": "array",
          "items": {
            "enum": [],
            "type": "string"
          },
          "title": "Primary key",
          "format": "select",
          "options": {
            "tags": true,
            "async": {
              "label": "Re-load columns",
              "action": "list_columns"
            },
            "dependencies": {
              "parquet_output": false
            }
          },
          "uniqueItems": true,
          "propertyOrder": 43
        },
        "parquet_output": {
          "type": "boolean",
          "title": "Store result as parquet",
          "format": "checkbox",
          "default": false,
          "description": "If enabled, the extractor will store result as parquet file into file storage instead of table",
          "propertyOrder": 41
        },
        "preserve_insertion_order": {
          "type": "boolean",
          "title": "Preserve insertion order",
          "format": "checkbox",
          "default": true,
          "description": "If enabled, the extractor will preserve the order of the rows in the destination table, when encountering OOM error, disabling this option may help",
          "propertyOrder": 46
        }
      },
      "propertyOrder": 4
    },
    "debug": {
      "type": "boolean",
      "title": "Debug mode",
      "format": "checkbox",
      "default": false,
      "description": "If enabled, the component will produce detailed logs",
      "propertyOrder": 5
    }
  }
}